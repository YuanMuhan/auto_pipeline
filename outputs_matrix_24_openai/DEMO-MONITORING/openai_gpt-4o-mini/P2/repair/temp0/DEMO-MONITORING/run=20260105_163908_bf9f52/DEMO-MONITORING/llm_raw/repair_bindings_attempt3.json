{
  "placements": [
    {
      "component_id": "temp_sensor_01",
      "layer": "device",
      "device_ref": "temp_sensor_01"
    },
    {
      "component_id": "edge_gateway_01",
      "layer": "edge",
      "device_ref": "edge_gateway_01"
    },
    {
      "component_id": "cloud_server_01",
      "layer": "cloud",
      "device_ref": "cloud_server_01"
    }
  ],
  "component_bindings": [
    {
      "link_id": "link_sensor_to_gateway",
      "from_endpoint": "temp_sensor_01",
      "to_endpoint": "edge_gateway_01"
    },
    {
      "link_id": "link_gateway_to_cloud",
      "from_endpoint": "edge_gateway_01",
      "to_endpoint": "cloud_server_01"
    }
  ],
  "transports": [
    {
      "link_id": "link_sensor_to_gateway",
      "protocol": "mqtt",
      "qos": "at_least_once"
    },
    {
      "link_id": "link_gateway_to_cloud",
      "protocol": "mqtt",
      "qos": "best_effort"
    }
  ],
  "endpoints": [
    {
      "id": "temp_sensor_01",
      "type": "ha_state",
      "address": "temp_sensor_01",
      "entity_id": "sensor.temperature"
    },
    {
      "id": "edge_gateway_01",
      "type": "ha_service",
      "address": "edge_gateway_01",
      "method": "post",
      "service": "gateway_service"
    },
    {
      "id": "cloud_server_01",
      "type": "ha_service",
      "address": "cloud_server_01",
      "method": "post",
      "service": "cloud_service"
    }
  ],
  "deployment": {
    "orchestrator": "custom",
    "config": {}
  },
  "app_name": "Smart Home Temperature Monitoring",
  "version": 1.0
}