{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Device Info Schema",
  "description": "Schema for device information with mandatory interfaces.endpoints",
  "type": "object",
  "required": ["devices"],
  "properties": {
    "devices": {
      "type": "array",
      "description": "List of available devices",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "layer", "interfaces"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique device identifier"
          },
          "name": {
            "type": "string",
            "description": "Human-readable device name"
          },
          "layer": {
            "type": "string",
            "description": "Deployment layer",
            "enum": ["cloud", "edge", "device"]
          },
          "type": {
            "type": "string",
            "description": "Device type (sensor, gateway, server, etc.)"
          },
          "capabilities": {
            "type": "array",
            "description": "Device capabilities",
            "items": {
              "type": "string"
            }
          },
          "interfaces": {
            "type": "object",
            "required": ["endpoints"],
            "properties": {
              "endpoints": {
                "type": "array",
                "description": "Communication endpoints (MUST be defined)",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["address"],
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Optional endpoint ID"
                    },
                    "name": {
                      "type": "string",
                      "description": "Endpoint name"
                    },
                    "type": { "type": "string", "description": "Endpoint type, must match catalog endpoint_types" },
                    "direction": { "type": "string", "description": "Direction from catalog (read/call/publish/subscribe)" },
                    "address": { "type": "string" },
                    "topic": { "type": "string" },
                    "entity_id": { "type": "string" },
                    "service": { "type": "string" },
                    "method": { "type": "string" },
                    "payload_schema": { "type": ["object", "string"] },
                    "description": { "type": "string" }
                  }
                }
              }
            },
            "additionalProperties": false
          },
          "resources": {
            "type": "object",
            "description": "Resource constraints",
            "properties": {
              "cpu": {
                "type": "string"
              },
              "memory": {
                "type": "string"
              },
              "storage": {
                "type": "string"
              },
              "power": {
                "type": "string"
              }
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
