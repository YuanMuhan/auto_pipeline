{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Problem Schema",
  "description": "Schema for user problem description (natural language focused, no endpoints)",
  "type": "object",
  "required": ["type", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the user problem (soft-required)"
    },
    "title": {
      "type": "string",
      "description": "Short title (soft-required)"
    },
    "target": {
      "type": "string",
      "description": "Target system or goal"
    },
    "context": {
      "type": "string",
      "description": "Context or environment description"
    },
    "type": {
      "type": "string",
      "description": "Problem category",
      "enum": ["monitoring", "control", "analytics", "automation", "custom"]
    },
    "description": {
      "type": "string",
      "description": "Natural language description of the problem",
      "minLength": 10
    },
    "requirements": {
      "type": "array",
      "description": "List of functional requirements",
      "items": {
        "type": "string"
      }
    },
    "triggers": {
      "type": "array",
      "items": {"type": "string"}
    },
    "expected_behavior": {
      "type": "array",
      "items": {"type": "string"}
    },
    "outputs": {
      "type": "array",
      "items": {"type": "string"}
    },
    "constraints": {
      "description": "Constraints (structured or list)",
      "anyOf": [
        {
          "type": "array",
          "items": {"type": "string"}
        },
        {
          "type": "object",
          "properties": {
            "latency": {"type": "string"},
            "data_volume": {"type": "string"},
            "reliability": {"type": "string"},
            "security": {"type": "string"}
          }
        }
      ]
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
