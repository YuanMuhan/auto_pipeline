{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evaluation Result Schema",
  "description": "Schema for pipeline evaluation results",
  "type": "object",
  "required": ["case_id", "timestamp", "checks", "metrics", "overall_status"],
  "properties": {
    "case_id": {
      "type": "string",
      "description": "Case identifier"
    },
    "timestamp": {
      "type": "string",
      "description": "Evaluation timestamp (ISO 8601)",
      "format": "date-time"
    },
    "checks": {
      "type": "object",
      "description": "Validation check results",
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "required": ["status", "message"],
          "properties": {
            "status": {
              "type": "string",
              "enum": ["PASS", "FAIL", "SKIP"]
            },
            "message": {
              "type": "string"
            },
            "details": {
              "type": "object",
              "additionalProperties": true
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Quantitative metrics",
      "properties": {
        "num_components": {
          "type": "integer",
          "minimum": 0
        },
        "num_links": {
          "type": "integer",
          "minimum": 0
        },
        "num_placements": {
          "type": "integer",
          "minimum": 0
        },
        "num_layers": {
          "type": "integer",
          "minimum": 0
        },
        "coverage_ratio": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": true
    },
    "overall_status": {
      "type": "string",
      "description": "Overall evaluation status",
      "enum": ["PASS", "FAIL", "PARTIAL"]
    },
    "failed_checks": {
      "type": "array",
      "description": "List of failed check names (if any)",
      "items": {
        "type": "string"
      }
    },
    "warnings": {
      "type": "array",
      "description": "Non-critical warnings",
      "items": {
        "type": "string"
      }
    },
    "stages_passed": {
      "type": "array",
      "description": "Pipeline stages that passed in order",
      "items": {
        "type": "string"
      }
    },
    "rules_version": {
      "type": "object",
      "description": "Hashes and counts derived from rules files",
      "properties": {
        "ir_rules_hash": { "type": "string" },
        "bindings_rules_hash": { "type": "string" },
        "ir_required_fields": { "type": "integer", "minimum": 0 },
        "ir_forbidden_keywords": { "type": "integer", "minimum": 0 },
        "bindings_required_fields": { "type": "integer", "minimum": 0 },
        "bindings_forbidden_keywords": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },
    "bindings_hash": {
      "type": "string",
      "description": "SHA256 of bindings.yaml"
    },
    "ir_interface_validation": {
      "type": "object",
      "properties": {
        "errors": { "type": "array", "items": { "type": "string" } },
        "warnings": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "string" }
      },
      "additionalProperties": true
    },
    "endpoint_matching_validation": {
      "type": "object",
      "properties": {
        "errors": { "type": "array", "items": { "type": "string" } },
        "warnings": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "string" }
      },
      "additionalProperties": true
    },
    "catalog_hashes": {
      "type": "object",
      "properties": {
        "components_index_hash": { "type": "string" },
        "endpoint_types_hash": { "type": "string" }
      },
      "additionalProperties": true
    },
    "input_validation": {
      "type": "array",
      "items": { "type": "string" }
    },
    "generated_manifest_present": {
      "type": "boolean",
      "description": "Whether generated_code/manifest.json exists"
    },
    "generation_consistency_pass": {
      "type": "boolean",
      "description": "Generation consistency check status"
    },
    "llm": {
      "type": "object",
      "description": "LLM call statistics",
      "properties": {
        "provider": { "type": "string" },
        "model": { "type": ["string", "null"] },
        "temperature": { "type": "number" },
        "cache_dir": { "type": "string" },
        "cache_enabled": { "type": "boolean" },
        "calls_total": { "type": "integer", "minimum": 0 },
        "calls_by_stage": { "type": "object" },
        "cache_hits": { "type": "integer", "minimum": 0 },
        "cache_misses": { "type": "integer", "minimum": 0 },
        "usage_tokens_total": { "type": "integer", "minimum": 0 },
        "prompt_template_hashes": { "type": "object" },
        "rules_hash": { "type": "string" },
        "schema_hashes": { "type": "object" }
      },
      "additionalProperties": true
    },
    "validators": {
      "type": "object",
      "description": "Structured validator outputs",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "pass": { "type": "boolean" },
            "failures": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "code": { "type": "string" },
                  "stage": { "type": "string" },
                  "checker": { "type": "string" },
                  "message": { "type": "string" }
                },
                "additionalProperties": true
              }
            },
            "warnings": { "type": "array", "items": { "type": "string" } },
            "metrics": { "type": "object" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "failures_flat": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": { "type": "string" },
          "stage": { "type": "string" },
          "checker": { "type": "string" },
          "message": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "pipeline": {
      "type": "object",
      "properties": {
        "stages": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_]+$": {
              "type": "object",
              "properties": {
                "pass": { "type": "boolean" },
                "duration_ms": { "type": "integer", "minimum": 0 },
                "attempts": { "type": "integer", "minimum": 0 }
              },
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        },
        "config": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
