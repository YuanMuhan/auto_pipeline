{
  "components": [
    {
      "id": "temp_sensor_01",
      "type": "TemperatureSensor",
      "capabilities": [
        "sense",
        "collect"
      ],
      "metadata": {
        "layer": "device",
        "data_type": "temperature_reading"
      }
    },
    {
      "id": "edge_gateway_01",
      "type": "processor",
      "capabilities": [
        "filter",
        "aggregate",
        "process"
      ],
      "metadata": {
        "layer": "edge"
      }
    },
    {
      "id": "cloud_server_01",
      "type": "DataStore",
      "capabilities": [
        "store",
        "analyze",
        "query"
      ],
      "metadata": {
        "layer": "cloud"
      }
    },
    {
      "id": "alert_service",
      "type": "Notifier",
      "capabilities": [
        "notify",
        "alert"
      ],
      "metadata": {
        "layer": "cloud"
      }
    },
    {
      "id": "monitoring_controller",
      "type": "RuleEngine",
      "capabilities": [
        "decide",
        "monitor"
      ],
      "metadata": {
        "layer": "cloud"
      }
    }
  ],
  "links": [
    {
      "id": "sensor_to_edge",
      "from": "temp_sensor_01",
      "to": "edge_gateway_01",
      "data_type": "sensor_reading",
      "frequency": "real-time",
      "contract": {
        "temperature": "number",
        "ts": "string"
      }
    },
    {
      "id": "edge_to_cloud",
      "from": "edge_gateway_01",
      "to": "cloud_server_01",
      "data_type": "aggregated_data",
      "frequency": "periodic"
    },
    {
      "id": "cloud_to_controller",
      "from": "cloud_server_01",
      "to": "monitoring_controller",
      "data_type": "analyzed_data",
      "frequency": "real-time"
    },
    {
      "id": "controller_to_alert",
      "from": "monitoring_controller",
      "to": "alert_service",
      "data_type": "alert_command",
      "frequency": "on-demand"
    }
  ],
  "logic": {
    "alert_condition": "temperature_anomaly_detected",
    "aggregation_window": "configurable_period",
    "alert_latency": "real_time"
  },
  "metadata": {
    "description": "Smart home temperature monitoring system IR with cloud analytics",
    "version": "1.0",
    "case_id": "DEMO-MONITORING"
  }
}