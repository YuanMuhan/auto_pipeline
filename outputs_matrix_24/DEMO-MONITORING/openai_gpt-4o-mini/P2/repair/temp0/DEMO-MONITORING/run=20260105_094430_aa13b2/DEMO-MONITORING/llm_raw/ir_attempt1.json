{
  "app_name": "Smart Home Temperature Monitoring",
  "version": 1.0,
  "components": [
    {
      "id": "temp_sensor_01",
      "type": "data_source",
      "capabilities": [
        "sense",
        "collect"
      ],
      "metadata": {
        "description": "Temperature sensor device for monitoring temperature."
      }
    },
    {
      "id": "edge_gateway_01",
      "type": "processor",
      "capabilities": [
        "filter",
        "aggregate",
        "store"
      ],
      "metadata": {
        "description": "Edge gateway for processing and filtering temperature data."
      }
    },
    {
      "id": "cloud_server_01",
      "type": "storage",
      "capabilities": [
        "store",
        "analyze",
        "visualize",
        "decide"
      ],
      "metadata": {
        "description": "Cloud server for storing and analyzing temperature data."
      }
    }
  ],
  "links": [
    {
      "id": "link_temp_to_edge",
      "from": "temp_sensor_01",
      "to": "edge_gateway_01",
      "data_type": "sensor_reading",
      "frequency": "real-time"
    },
    {
      "id": "link_edge_to_cloud",
      "from": "edge_gateway_01",
      "to": "cloud_server_01",
      "data_type": "command",
      "frequency": "periodic"
    }
  ],
  "logic": {
    "rules": [
      {
        "if": "temperature exceeds threshold",
        "then": "trigger alert"
      }
    ]
  },
  "metadata": {
    "description": "Logical representation of a smart home temperature monitoring system with cloud analytics.",
    "case_id": "DEMO-MONITORING"
  }
}