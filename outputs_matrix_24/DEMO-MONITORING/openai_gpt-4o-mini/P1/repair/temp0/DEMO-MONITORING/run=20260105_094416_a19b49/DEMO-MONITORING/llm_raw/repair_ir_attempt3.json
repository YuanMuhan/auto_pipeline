{
  "components": [
    {
      "id": "temp_sensor_01",
      "type": "sensor",
      "capabilities": [
        "sense",
        "collect"
      ]
    },
    {
      "id": "edge_gateway_01",
      "type": "processing_unit",
      "capabilities": [
        "filter",
        "aggregate",
        "analyze",
        "store"
      ]
    },
    {
      "id": "cloud_server_01",
      "type": "data_storage",
      "capabilities": [
        "store",
        "analyze",
        "visualize",
        "alert"
      ]
    }
  ],
  "links": [
    {
      "id": "sensor_to_gateway",
      "from": "temp_sensor_01",
      "to": "edge_gateway_01",
      "data_type": "sensor_reading",
      "frequency": "real-time"
    },
    {
      "id": "gateway_to_cloud",
      "from": "edge_gateway_01",
      "to": "cloud_server_01",
      "data_type": "processed_data",
      "frequency": "periodic"
    }
  ],
  "logic": {
    "alert_condition": "temperature_above_threshold",
    "aggregation_window": "5_minutes"
  },
  "metadata": {
    "description": "Smart home temperature monitoring system with cloud analytics",
    "version": "1.0"
  },
  "app_name": "monitoring_app",
  "description": "Smart home temperature monitoring system with cloud analytics",
  "version": "1.0.0",
  "schemas": [],
  "policies": []
}