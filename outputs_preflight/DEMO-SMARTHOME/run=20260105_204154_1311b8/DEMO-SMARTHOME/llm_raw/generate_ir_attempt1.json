      "data_type": "control_command",
      "frequency": "on-demand",
      "contract": {}
    },
    {
      "id": "link_engine_to_notify",
      "from": "automation_engine",
      "to": "notification_service",
      "data_type": "alert",
      "frequency": "event-driven",
      "contract": {}
    },
    {
      "id": "link_engine_to_storage",
      "from": "automation_engine",
