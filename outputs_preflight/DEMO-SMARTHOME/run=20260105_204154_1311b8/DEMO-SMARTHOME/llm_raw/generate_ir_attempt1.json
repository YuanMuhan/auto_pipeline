      "type": "Light",
      "capabilities": [
        "control_light",
        "dimming"
      ],
      "metadata": {}
    },
    {
      "id": "automation_engine",
      "type": "RuleEngine",
      "capabilities": [
        "rule_eval",
        "event_routing",
        "mode_management"
      ],
      "metadata": {}
    },
    {
      "id": "notification_service",
      "type": "Notifier",
      "capabilities": [
